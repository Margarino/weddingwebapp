@model IEnumerable<weddingWebapp.Models.Regalo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreRegalo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoRegalo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionRegalo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th></th>
        </tr>
    </thead>
