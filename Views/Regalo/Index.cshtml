        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreRegalo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostoRegalo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionRegalo)
            </td>
